<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".AddEditNoteActivity">

    <com.neat.ui.RobotoEditText
        android:id="@+id/notes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_hint"
        android:minLines="1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:met_primaryColor="@color/primary_dark"
        app:met_textColor="@color/accent"
        app:typeface="robotoslab_bold" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/notes_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="@string/text_hint"
        android:minLines="1"
        android:layout_below="@+id/notes_title"
        android:textSize="16sp"
        app:met_primaryColor="@color/primary"
        app:met_textColor="@color/accent"
        app:typeface="robotoslab_light" />

    <Button
        android:id="@+id/save_note"
        android:layout_width="match_parent"
        android:text="@string/save"
        android:textColor="@color/white"
        android:background="@color/primary_dark"
        android:backgroundTint="@color/primary_dark"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>


