<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextView">
        <attr name="typeface" />
        <attr name="textSpacing" />
    </declare-styleable>

    <declare-styleable name="EditText">
        <attr name="typeface" />
        <attr name="textSpacing" />
    </declare-styleable>

    <attr name="textSpacing" format="float" />
    <!-- Changing the attribute must be reflected in the com.practo.droid.misc.ui.TextViewPlus -->
    <attr name="typeface" format="enum">
        <enum name="thin" value="0" />
        <enum name="thin_italic" value="1" />
        <enum name="light" value="2" />
        <enum name="light_italic" value="3" />
        <enum name="regular" value="4" />
        <enum name="italic" value="5" />
        <enum name="medium" value="6" />
        <enum name="medium_italic" value="7" />
        <enum name="bold" value="8" />
        <enum name="bold_italic" value="9" />
        <enum name="black" value="10" />
        <enum name="black_italic" value="11" />
        <enum name="condensed" value="12" />
        <enum name="condensed_italic" value="13" />
        <enum name="condensed_bold" value="14" />
        <enum name="condensed_bold_italic" value="15" />
        <enum name="robotoslab_thin" value="16" />
        <enum name="robotoslab_light" value="17" />
        <enum name="robotoslab_regular" value="18" />
        <enum name="robotoslab_bold" value="19" />
    </attr>

</resources>